model Swaps {
  id             String           @id @default(cuid())
  invoiceId      String
  swapDate       DateTime         @default(now())
  status         SwapStatus       @default(PENDING)
  notes          String?
  difference     Float            @default(0)
  baseTotal      Float            @default(0)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  createdBy      String?
  code           String           @unique
  invoice        Invoices         @relation(fields: [invoiceId], references: [id])
  creator        Users?           @relation("SwapCreator", fields: [createdBy], references: [id])
  swapDetails    SwapDetails[]
  stockMovements StockMovements[]
  deliveries     Deliveries[] // Relation to Deliveries

  @@map("swaps")
}

model SwapDetails {
  id                      String   @id @default(cuid())
  swapId                  String
  oldItemId               String
  replacementItemId       String
  oldItemCogs             Float
  replacementItemCogs     Float
  oldItemQuantity         Float    @default(1)
  replacementItemQuantity Float    @default(1)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  swap                    Swaps    @relation(fields: [swapId], references: [id], onDelete: Cascade)
  oldItem                 Products @relation("OldSwapItem", fields: [oldItemId], references: [id])
  replacementItem         Products @relation("ReplacementSwapItem", fields: [replacementItemId], references: [id])

  @@map("swap_details")
}

enum SwapStatus {
  PENDING
  COMPLETED
  CANCELED
}

